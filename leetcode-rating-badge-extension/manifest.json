{
  "manifest_version": 3,
  "name": "LeetCode.cn Rating Badge",
  "version": "0.1.0",
  "description": "Show community problem rating next to difficulty on leetcode.cn.",
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://leetcode.cn/*",
    "https://zerotrac.github.io/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.cn/problems/*/description/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options.html"
}
